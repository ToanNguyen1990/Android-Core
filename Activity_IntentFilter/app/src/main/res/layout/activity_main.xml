<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="toan.net.activity_intent.MainActivity">

    <EditText
        android:layout_marginTop="50dp"
        android:hint="@string/number"
        android:id="@+id/edtSendMessage"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnDefault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/default_01"
        app:layout_constraintTop_toBottomOf="@id/edtSendMessage" />


    <Button
        android:id="@+id/btnCustom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="fill_vertical"
        android:text="@string/custom"
        app:layout_constraintTop_toBottomOf="@id/btnDefault" />

</android.support.constraint.ConstraintLayout>
